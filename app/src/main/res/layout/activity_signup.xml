<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/siyaharkaplan"
    tools:context="com.example.baba.sinemabiletim.signupActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/sinemabiletim"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            />
        <TextView
            android:gravity="center"
            android:id="@+id/kayitxt"
            android:text="Aşağıdaki formu doldur, hemen hesabını açalım!"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edittelkayit"
            android:hint="Telefon Numaranız(0 olmadan)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/white"
            android:textColorHighlight="@android:color/white"
            android:text=""
            android:textColor="@android:color/white"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="10"
            app:met_primaryColor="@android:color/white"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editisimkayit"
            android:hint="İsminiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/white"
            android:textColorHighlight="@android:color/white"
            android:text=""
            android:textColor="@android:color/white"
            android:inputType="text"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/white"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editsifrekayit"
            android:hint="Şifreniz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/white"
            android:textColorHighlight="@android:color/white"
            android:text=""
            android:textColor="@android:color/white"
            android:inputType="text"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/white"
            app:met_singleLineEllipsis="true"
            />




    </LinearLayout>

    <Button
        android:id="@+id/btnkayitol"
        android:text="@string/kayitbtn"
        android:textColor="@android:color/white"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/btnkayit"
        />



</RelativeLayout>
